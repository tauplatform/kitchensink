<div data-role="page">

  <%= render :partial => "/partials/page_head" %>
    
  <div data-role="content">
  
    <%= render :partial => "/partials/example_header", :locals => {:title => "Network Availability", :description => "
      This example will show you the availability of the network
    " }
    %>

    <%= render :partial => "/partials/language_tabs" %>
    
    <% if (Rho::System.platform == "ANDROID" || Rho::System.platform == "APPLE" || Rho::System.platform == "WINDOWS") %>
      <div class="sample ruby">
        <ul>
          <li>Has Cell Network : <%= @cell_network %> </li>
          <li>Has Network : <%= @network %></li>
          <li>Has Wifi Network : <%= @wifi_network %></li>   
        </ul>
      </div>
      
      <div class="sample javascript">
            <a href="#" data-role="button" onclick="KitchenSink.Samples.Network.network_availability()">Network Availability</a>    
      </div>
    <% else %>
      Network Availability is supported on Android, IOS and Windows Mobile
    <% end %>
  </div>
</div>



